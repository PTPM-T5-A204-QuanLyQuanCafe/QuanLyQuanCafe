
@{
    ViewBag.Title = "Sign_up";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}

<div class="row" style="width: 100%;">

    <div class="col-lg-8 mx-auto col-12">

       @if(Session["TrangThaiDK"]!=null)
            {
           <h3>Đăng kí thành công</h3>
            }





        <div class="row" style="width: 100%;">
            <div class="col-12 mx-auto">

                <form role="form" method="post">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <div class="form-floating mb-4">
                            <input type="text" name="phone" class="form-control" placeholder="Phone number" required>

                            <label for="phone">Phone number</label>
                        </div>
                        <div class="form-floating">
                            <input type="text" name="name" class="form-control" placeholder="Name" required>

                            <label for="name">Name</label>
                        </div>
                        <div class="form-floating mb-4">
                            <h5>Address</h5>
                            <div class="container d-inline">


                                <select name="province" id="province">
                                </select>
                                <select name="district" id="district">
                                    <option value="">chọn quận</option>
                                </select>
                                <select name="ward" id="ward">
                                    <option value="">chọn phường</option>
                                </select>


                                <!-- <h2 id="result"></h2> -->
                            </div>

                        </div>

                        <div class="form-floating">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required>

                            <label for="email">Email address</label>
                        </div>

                        <div class="form-floating my-4">
                            <input type="password" name="password" id="password" pattern="[0-9a-zA-Z]{4,10}" class="form-control" placeholder="Password" required>

                            <label for="password">Password</label>

                        </div>

                        <div class="form-floating">
                            <input type="password" name="confirm_password" id="confirm_password" pattern="[0-9a-zA-Z]{4,10}" class="form-control" placeholder="Password" required>

                            <label for="confirm_password">Password Confirmation</label>
                        </div>

                        <button type="submit" class="btn custom-btn form-control mt-4 mb-3">
                            Create account
                        </button>

                        <p class="text-center">Already have an account? Please @Html.ActionLink("Sign in", "Sign_in", "TaiKhoan")</p>
                    }
                    </form>
            </div>
        </div>

    </div>

</div>


